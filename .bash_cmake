#!/bin/bash
if [ "$(expr substr $(uname -s) 1 6)" == "CYGWIN" ]; then
    # adjust the following line (absolute path to the directory containing this file)
   MIDDLE_SRC_DIR=$HOME/Desktop/dev/immoweb/src/middle
   alias cmake_debug="cmake -DMIDDLE_SRC_DIR=$MIDDLE_SRC_DIR -DCMAKE_TOOLCHAIN_FILE=$MIDDLE_SRC_DIR/w64-mingw/toolchain-w64-mingw.cmake -DCMAKE_BUILD_TYPE=debug"
   alias cmake_rel_deb="cmake -DMIDDLE_SRC_DIR=$MIDDLE_SRC_DIR -DCMAKE_TOOLCHAIN_FILE=$MIDDLE_SRC_DIR/w64-mingw/toolchain-w64-mingw.cmake -DCMAKE_BUILD_TYPE=relwithdebinfo"
   alias cmake_release="cmake -DMIDDLE_SRC_DIR=$MIDDLE_SRC_DIR -DCMAKE_TOOLCHAIN_FILE=$MIDDLE_SRC_DIR/w64-mingw/toolchain-w64-mingw.cmake -DCMAKE_BUILD_TYPE=release"
else
  alias cmake_debug="cmake -DCMAKE_BUILD_TYPE=debug"
  alias cmake_rel_deb="cmake -DCMAKE_BUILD_TYPE=relwithdebinfo"
  alias cmake_release="cmake -DCMAKE_BUILD_TYPE=release"
fi
# only removes cmake infrastructure, leaves build artifacts
function cmake_clean(){
  if [ $# -eq 0 ]; then
     dir=.
  else
     dir=$1
  fi
  rm -rf `find $dir \( -name 'CMakeFiles' -o -name 'CMakeCache.txt' -o -name 'cmake_install.cmake' -o -name 'CTestTestfile.cmake' -o -name Testing \)`
}
